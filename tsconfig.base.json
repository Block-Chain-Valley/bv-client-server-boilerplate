{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react-jsx",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "allowJs": true,
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@split/hooks": ["libs/hooks/src/index.ts"],
      "@split/ui": ["libs/ui/src/index.ts"],
      "@split/model": ["libs/model/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist", ".next"]
}
